include std
include sys:ui
include sys:ui:layout

type entry := {
    name: char*
    id: std:uint64_t
}

def entries -> entry[3] := [
    { "jeff", 0 },
    { "bob", 1 },
    { "bill", 2 }
]

def gen(e: entry) := ui:stack(layout:horizontal) {
    ui:text(e.name)
    ui:text(std:str(e.id))
}

@entry(gui)
def main := ui:window("example") {
    ui:stack(layout:vertical) {
        ui:loop(entries()).apply(gen)
    }
}