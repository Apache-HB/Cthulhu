import bezos:gui -> ui
import bezos:gui:layout -> layout
import bezos:util -> util


type entry := {
    name: str,
    id: u64
}

let entries: entry[] := [
    { "jeff", 0 },
    { "bob", 1 },
    { "bill", 2 }
]

def gen(e: entry) := @ui:stack(layout:horizontal) {
    items := [
        ui:text(entry.name),
        ui:text(util:to_string(e.id))
    ]
}

@entry(gui)
def guimain := @ui:window("example") {
    @ui:stack(layout:vertical) {
        ui:loop(entries).with(gen)
    }
}