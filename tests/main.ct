include sys::io

// namespaces
type f := io::file

// unions
type un := union {
    a: i32;
    b: u32;
    c: u8[4];
}

// structs
type st := struct {
    a: u32;
    b: u32;
    c: u8[4];
}

// function pointer
type fn := def(i32, i32) -> i32

// functions
// arguments are optional
def foo() -> i32 { return 5 }

def foo -> i32 { return 5 }

// as is the return type
def foo { return 5 }

// single line function syntax
def foo := 5

def foo(i: i32) -> i32 := i

// default values
def foo(i: i32 := 0) -> i32 := i

type pair := struct {
    a: u32;
    b: u32;
}

