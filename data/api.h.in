#pragma once

#define CTU_@MODULE@_SHARED @BUILD_SHARED@

// check for clang and gcc first because clang likes to pretend its msvc
#if (defined(__GNUC__) || defined(__clang__)) && defined(CTU_@MODULE@_SHARED)
#   define CTU_@MODULE@_API __attribute__((visibility("default"))) extern
#   define CTU_@MODULE@_LOCAL __attribute__((visibility("hidden")))
#elif defined(_MSC_VER) && defined(CTU_@MODULE@_SHARED)
#   if CTU_@MODULE@_EXPORTS
#       define CTU_@MODULE@_API __declspec(dllexport) extern
#       define CTU_@MODULE@_LOCAL
#   else
#       define CTU_@MODULE@_API __declspec(dllimport) extern
#       define CTU_@MODULE@_LOCAL
#   endif
#else
#   define CTU_@MODULE@_API extern
#   define CTU_@MODULE@_LOCAL
#endif
