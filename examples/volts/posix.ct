module cthulhu::posix;

type FILE = opaque;

@extern("fwrite")
export def fwrite(ptr: opaque, size: usize, count: usize, stream: FILE): usize;

@extern("fread")
export def fread(ptr: opaque, size: usize, count: usize, stream: FILE): usize;

@extern("fopen")
export def fopen(filename: str, mode: str): FILE;

@extern("fclose")
export def fclose(stream: FILE): int;
