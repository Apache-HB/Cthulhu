module glfw;

@extern("glfwInit")
export def init: int;

@extern("glfwTerminate")
export def terminate: void;

export type Window = *void;

@extern("glfwCreateWindow")
export def createWindow(x: int, y: int, title: str, monitor: *void, share: *void): Window;

@extern("glfwWindowShouldClose")
export def windowShouldClose(window: Window): int;

@extern("glfwPollEvents")
export def pollEvents: void;
